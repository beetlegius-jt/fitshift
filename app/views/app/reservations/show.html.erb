<%= turbo_frame_tag :remote_modal, target: :_top do %>
  <div class="modal" data-controller="modal" data-bs-backdrop="static">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><%= @event.activity_name %></h5>
        </div>

        <div class="modal-body">
          <%= render @event %>
        </div>

        <div class="modal-footer">
          <%= tag.div t(:cancel), class: "btn btn-secondary", data: { bs_dismiss: :modal } %>

          <%= link_to t(".unreserve"), [:app, @reservation], class: 'btn btn-danger', data: { turbo_method: :delete, action: "modal#disconnect" } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
